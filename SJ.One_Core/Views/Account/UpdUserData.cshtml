@model SJ.One_Core.Models.AccountViewModels.UserDataViewModel

@{
    ViewData["Title"] = "Данные пользователя";
}
    <div class="row">
        <div class="col"></div>
        <div class="card col-sm-7 col-md-6 col-lg-5 col-xl-4 mx-1">
            <div class="card-body">
                <h2 class="card-title text-center">Данные</h2>
                <hr />
                <form asp-action="UpdUserData">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DOB" class="control-label"></label>
                        <input asp-for="DOB" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col">
                            <a href="@Model.ReturnUrl" class="btn btn-secondary btn-block" role="button">Назад</a>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary btn-block">Далее</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col"></div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
