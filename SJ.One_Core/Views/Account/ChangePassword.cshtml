@model SJ.One_Core.Models.AccountViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<div class="row">
    <div class="col"></div>
    <div class="card col-sm-7 col-md-6 col-lg-5 col-xl-4 mx-1">
        <div class="card-body">
            <h2 class="card-title text-center">Смена пароля</h2>
            <hr />
            <form asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" class="form-control" type="hidden" />
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" aria-describedby="passwordHelp" autofocus/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small id="passwordHelp" class="form-text text-muted">
                        *Введите пароль.
                    </small>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" aria-describedby="newPasswordHelp" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <small id="passwordHelp" class="form-text text-muted">
                        *Длина нового пароля должна быть от 8 до 50 знаков, включать цифры, буквы и символы.
                    </small>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmNewPassword" class="control-label"></label>
                    <input asp-for="ConfirmNewPassword" class="form-control" aria-describedby="newConfirmPasswordHelp"/>
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    <small id="newConfirmPasswordHelp" class="form-text text-muted">
                        *Введите новый пароль повторно.
                    </small>
                </div>
                <hr />
                <div class="row">
                    <div class="col mb-2">
                        <a class="btn btn-secondary btn-block" asp-controller="Account" asp-action="UserInfo" asp-route-id="@Model.Id">
                            Отмена
                        </a>
                    </div>
                    <div class="col">
                        <input type="submit" value="Сменить" class="btn btn-success btn-block" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
